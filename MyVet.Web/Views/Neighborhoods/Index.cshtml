@model IEnumerable<Sistema.Web.Data.Entities.Neighborhood>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Neighborhood_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Neighborhood_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.City_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Neighborhood_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Neighborhood_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Neighborhood_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
