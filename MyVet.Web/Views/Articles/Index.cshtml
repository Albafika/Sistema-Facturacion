@model IEnumerable<Sistema.Web.Data.Entities.Article>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Article_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticleClassification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Article_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticleClassification.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Brand.Brand_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Article_Id" class="btn btn-md btn-primary">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Article_Id" class="btn btn-md btn-info">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Article_Id" class="btn btn-md btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
